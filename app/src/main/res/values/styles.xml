<resources>

    <!-- Base application theme. -->
    <style name="string_master_light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>
    <style name="AppPreference.DialogPreference">
        <item name="android:positiveButtonText">@string/dialog_clear_scores_ok</item>
        <item name="android:negativeButtonText">@string/dialog_clear_scores_cancel</item>
    </style>
    <style name="AppPreference.SeekBarPreference">
        <item name="showSeekBarValue">false</item>
        <item name="android:layout">@layout/preference_widget_seekbar_material</item>
    </style>

</resources>
